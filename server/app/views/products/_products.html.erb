<table>
    <thead>
      <tr>
        <th>Product name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Price</th>
        <th>Availability</th>
        <th>Product category</th>
        <th>Brand</th>
        <th>Gtin</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.product_name %></td>
          <td><%= product.description %></td>
          <td>
            <%= image_tag(product.image, {:style => "width:150px"}) %>
          </td>
          <td><%= product.price %></td>
          <td><%= product.availability %></td>
          <td><%= product.product_category %></td>
          <td><%= product.brand %></td>
          <td><%= product.gtin %></td>
          <td class="action"><%= link_to 'Show', product %></td>
          <td class="action"><%= link_to 'Edit', edit_product_path(product) %></td>
          <td class="action"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
